// Dashboard-style horizontal layout for faceless generator
// Replace lines 321-470 in page.tsx with this structure:

<div className="w-full px-8 space-y-6 animate-in fade-in slide-in-from-bottom-4 duration-500">
  
  <div className="text-center mb-8">
    <h2 className="text-3xl font-bold mb-2">Faceless Video Generator</h2>
    <p className="text-white/40">Transform any YouTube video into engaging Shorts with AI narration.</p>
  </div>

  {/* YouTube URL - Full Width */}
  <div className="bg-white/[0.02] border border-white/5 rounded-2xl p-6">
    <label className="block text-sm font-medium text-white/50 mb-3">YouTube URL</label>
    <input
      type="text"
      value={facelessUrl}
      onChange={(e) => setFacelessUrl(e.target.value)}
      placeholder="https://youtube.com/watch?v=..."
      disabled={isProcessingFaceless}
      className="w-full px-4 py-3 bg-black/40 border border-white/10 rounded-xl text-white placeholder-white/20 focus:outline-none focus:border-purple-500/40 transition-all"
    />
  </div>

  {/* Dashboard Grid - 5 Columns */}
  <div className="grid grid-cols-5 gap-4">
    
    {/* Column 1: Style */}
    <div className="bg-white/[0.02] border border-white/5 rounded-xl p-4">
      <label className="block text-xs font-semibold text-white/50 mb-3">Style</label>
      <div className="grid grid-cols-2 gap-2">
        {STYLES.map((s) => (
          <button
            key={s.id}
            onClick={() => setFacelessStyle(s.id)}
            className={`p-2 rounded-lg border transition-all ${facelessStyle === s.id ? "border-purple-500/40 bg-purple-500/10" : "border-white/5 bg-black/20"}`}
          >
            <s.icon className="w-5 h-5 mx-auto mb-1 text-purple-300" />
            <div className="text-[9px] text-white/70">{s.label}</div>
          </button>
        ))}
      </div>
    </div>

    {/* Column 2: Voice */}
    <div className="bg-white/[0.02] border border-white/5 rounded-xl p-4">
      <label className="block text-xs font-semibold text-white/50 mb-3">Voice</label>
      <div className="space-y-1.5 max-h-[160px] overflow-y-auto custom-scrollbar pr-1">
        {VOICES.map((v) => (
          <button
            key={v.id}
            onClick={() => setFacelessVoice(v.id)}
            className={`w-full p-2 rounded-lg border transition-all ${facelessVoice === v.id ? "border-purple-500/40 bg-purple-500/10" : "border-white/5 bg-black/20"}`}
          >
            <div className="flex items-center justify-between text-left">
              <span className="text-[10px] text-white/80">{v.lang} {v.label}</span>
              <span className="text-[8px] text-white/30">{v.gender[0]}</span>
            </div>
          </button>
        ))}
      </div>
    </div>

    {/* Column 3: Music */}
    <div className="bg-white/[0.02] border border-white/5 rounded-xl p-4">
      <label className="block text-xs font-semibold text-white/50 mb-3">Music</label>
      <div className="grid grid-cols-2 gap-2">
        {MUSIC_MOODS.map((m) => (
          <button
            key={m.id}
            onClick={() => setFacelessMusic(m.id)}
            className={`p-2 rounded-lg border transition-all ${facelessMusic === m.id ? "border-purple-500/40 bg-purple-500/10" : "border-white/5 bg-black/20"}`}
          >
            <m.icon className="w-4 h-4 mx-auto mb-1" style={{ color: m.color }} />
            <div className="text-[9px] text-white/70">{m.label}</div>
          </button>
        ))}
      </div>
    </div>

    {/* Column 4: Duration */}
    <div className="bg-white/[0.02] border border-white/5 rounded-xl p-4">
      <label className="block text-xs font-semibold text-white/50 mb-3">Duration</label>
      <div className="space-y-2">
        {DURATIONS.map((d) => (
          <button
            key={d.id}
            onClick={() => setFacelessDuration(d.id)}
            className={`w-full p-2 rounded-lg border transition-all ${facelessDuration === d.id ? "border-purple-500/40 bg-purple-500/10" : "border-white/5 bg-black/20"}`}
          >
            <div className="text-xs font-semibold text-white/80">{d.label}</div>
            <div className="text-[8px] text-white/30">{d.desc}</div>
          </button>
        ))}
      </div>
    </div>

    {/* Column  5: Language */}
    <div className="bg-white/[0.02] border border-white/5 rounded-xl p-4">
      <label className="block text-xs font-semibold text-white/50 mb-3">Language</label>
      <div className="space-y-2">
        <button
          onClick={() => setFacelessLanguage("english")}
          className={`w-full p-2.5 rounded-lg border transition-all ${facelessLanguage === "english" ? "border-purple-500/40 bg-purple-500/10" : "border-white/5 bg-black/20"}`}
        >
          <div className="text-xs">ðŸ‡ºðŸ‡¸ English</div>
        </button>
        <button
          onClick={() => setFacelessLanguage("hindi")}
          className={`w-full p-2.5 rounded-lg border transition-all ${facelessLanguage === "hindi" ? "border-purple-500/40 bg-purple-500/10" : "border-white/5 bg-black/20"}`}
        >
          <div className="text-xs">ðŸ‡®ðŸ‡³ Hindi</div>
        </button>
      </div>
    </div>

  </div>

  {/* Generate Button */}
  <button
    onClick={handleGenerateFaceless}
    disabled={isProcessingFaceless || !facelessUrl.trim()}
    className="w-full py-5 rounded-2xl bg-purple-600 hover:bg-purple-500 text-white font-semibold text-lg shadow-lg transition-all disabled:opacity-40"
  >
    {isProcessingFaceless ? "Generating..." : "Generate Faceless Video"}
  </button>

</div>
